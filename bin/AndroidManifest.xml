            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Air_ConditioningActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".HeatingActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".MusicActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape" >
